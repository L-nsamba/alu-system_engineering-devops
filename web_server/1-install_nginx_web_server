#!/usr/bin/env bash
# Script name: 1-install_nginx_web_server

# Update package list and install nginx without prompts
apt-get update -y
apt-get install -y nginx

# Ensure the default server block listens on port 80 (usually default)
# Overwrite the default index.html
cat > /var/www/html/index.html <<EOF
Holberton School for the win!
EOF

# Restart Nginx using service (systemctl not allowed)
service nginx restart

# Ensure Nginx starts on boot (optional)
update-rc.d nginx defaults

# Wait a few seconds to make sure Nginx is up
sleep 2
