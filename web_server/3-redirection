#!/bin/bash

# 3-redirection: Install Nginx and configure /redirect_me redirection

# Variables
REDIRECT_URL="https://www.youtube.com/watch?v=QH2-TGUlwu4"
NGINX_CONF="/etc/nginx/sites-available/default"

# 1. Update package lists
sudo apt-get update -y

# 2. Install Nginx if not installed
if ! command -v nginx &> /dev/null; then
    sudo apt-get install -y nginx
fi

# 3. Backup original Nginx config
if [ ! -f "${NGINX_CONF}.bak" ]; then
    sudo cp "$NGINX_CONF" "${NGINX_CONF}.bak"
fi

# 4. Remove any existing /redirect_me block
sudo sed -i '/location \/redirect_me {/,/}/d' "$NGINX_CONF"

# 5. Insert /redirect_me block inside server block, after server_name
sudo sed -i '/server_name _;/a \
    \    location /redirect_me {\
    \        return 301 '"$REDIRECT_URL"';\
    \    }' "$NGINX_CONF"

# 6. Test Nginx configuration
sudo nginx -t

# 7. Reload Nginx
sudo service nginx reload

echo "Redirection configured! /redirect_me now points to $REDIRECT_URL"
