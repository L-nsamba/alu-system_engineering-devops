#!/usr/bin/env bash
# Script: 3-redirection
# Configures Nginx to permanently redirect /redirect_me to YouTube

# Install nginx
sudo apt-get update -y
sudo apt-get install -y nginx

# Add redirect inside the default server block
sudo sed -i '/listen 80 default_server;/a \
    location /redirect_me {\n\
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n\
    }' /etc/nginx/sites-available/default

# Test configuration and restart Nginx using allowed method
sudo nginx -t
sudo service nginx restart
