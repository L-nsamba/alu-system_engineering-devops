#!/usr/bin/env bash
# Install and configure HAProxy load balancer

# Update and install HAProxy
apt-get update -y
apt-get install -y haproxy

# Configure HAProxy to be managed via init script
sed -i 's/ENABLED=0/ENABLED=1/' /etc/default/haproxy

# Create HAProxy configuration
cat > /etc/haproxy/haproxy.cfg << 'EOF'
global
    daemon
    maxconn 256

defaults
    mode http
    timeout connect 5000ms
    timeout client 50000ms
    timeout server 50000ms

frontend http_front
    bind *:80
    default_backend webservers

backend webservers
    balance roundrobin
    server 6871-web-01 192.168.1.10:80 check
    server 6871-web-02 192.168.1.11:80 check
EOF

# Start HAProxy using init script
service haproxy restart

# Display success message with required output
echo "HAProxy load balancer installed and configured successfully!"
echo "Load balancer is distributing traffic using roundrobin algorithm between:"
echo "- web-01 (192.168.1.10)"
echo "- web-02 (192.168.1.11)"
