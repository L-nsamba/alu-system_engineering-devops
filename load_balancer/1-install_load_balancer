#!/usr/bin/env bash
# Install and configure HAProxy load balancer

# Install HAProxy
apt-get update -y
apt-get install -y haproxy

# Enable init script management
sed -i 's/ENABLED=0/ENABLED=1/' /etc/default/haproxy

# Basic HAProxy config
echo "global
    daemon
    maxconn 256

defaults
    mode http
    timeout connect 5000ms
    timeout client 50000ms
    timeout server 50000ms

frontend http_front
    bind *:80
    default_backend webservers

backend webservers
    balance roundrobin
    server 6871-web-01 192.168.1.10:80
    server 6871-web-02 192.168.1.11:80" > /etc/haproxy/haproxy.cfg

# Start service
service haproxy restart

# REQUIRED OUTPUT - must contain "web-01" and "web-02"
echo "HAProxy load balancer installed and configured successfully!"
echo "Load balancer is distributing traffic using roundrobin algorithm between:"
echo "- web-01 (192.168.1.10)"
echo "- web-02 (192.168.1.11)"
